    <platform name="android">
        <preference name="fullscreen" value="false" />
		 <preference name="android-minSdkVersion" value="14" />
	<preference name="android-windowSoftInputMode" value="adjustResize" />
        <icon density="ldpi" src="foodlogo.png" />
        <icon density="mdpi" src="foodlogo.png" />
        <icon density="hdpi" src="foodlogo.png" />
        <icon density="xhdpi" src="foodlogo.png" />
        <icon density="xxhdpi" src="foodlogo.png" />
        <icon density="xxxhdpi" src="foodlogo.png" />
    </platform>

